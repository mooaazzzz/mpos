<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eventure" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="style_regular" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="style_bold" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>

        <item name="fontFamily">@font/rubik_bold</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorControlNormal">@color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:colorAccent">@color/white</item>
    </style>

    <style name="spinnerMonth" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>

    </style>

    <style name="EditTextHint">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="errorTextColor">@color/ui_red</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    </style>

    <style name="SpinnerTheme" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:textAppearance">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Color1SwitchStyle"  parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/rubik_bold</item>

        <item name="colorControlActivated">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="DatePickerStyle" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">#fff</item>
        <item name="colorPrimary">@color/orange_color</item>
    </style>
</resources>